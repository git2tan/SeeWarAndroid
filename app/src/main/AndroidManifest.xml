<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seawar">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sw"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sw"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".MainMenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreateGameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LobbyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ConnectToGameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InGameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StatisticActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ObserverActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>