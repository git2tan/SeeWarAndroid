<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seawar">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sw"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sw"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".CreateGameActivity" />
        <activity android:name=".LobbyActivity" />
        <activity android:name=".ConnectToGameActivity" />
        <activity android:name=".InGameActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".StatisticActivity" />
        <activity android:name=".ObserverActivity"></activity>
    </application>

</manifest>