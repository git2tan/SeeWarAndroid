<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seawar.MainActivity">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="582dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/setDefaultIPButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Default IP"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="439dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:layout_marginBottom="74dp" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="114dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:text="Connect"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="220dp"
            android:layout_below="@+id/connectIPField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp" />

        <EditText
            android:id="@+id/connectIPField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoText="false"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="150dp"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/connectStateLabel"
            android:layout_alignRight="@+id/connectButton"
            android:layout_alignEnd="@+id/connectButton"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp" />

        <TextView
            android:id="@+id/connectStateLabel"
            android:layout_width="214dp"
            android:layout_height="18dp"
            android:layout_weight="0.38"
            android:text="TextView"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="88dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp" />

        <EditText
            android:id="@+id/portField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_above="@+id/connectButton"
            android:layout_toRightOf="@+id/connectIPField"
            android:layout_alignRight="@+id/connectStateLabel"
            android:layout_alignEnd="@+id/connectStateLabel"
            android:text="4444"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
