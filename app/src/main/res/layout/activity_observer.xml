<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seawar.ObserverActivity">

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/sendMessageObs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="253dp"
            android:layout_y="427dp"
            android:text="send" />

        <EditText
            android:id="@+id/messageFieldObs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="31dp"
            android:layout_y="431dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Message" />

        <AbsoluteLayout
            android:id="@+id/gamer1Board"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_x="5dp"
            android:layout_y="29dp">

        </AbsoluteLayout>

        <AbsoluteLayout
            android:id="@+id/gamer2Board"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_x="186dp"
            android:layout_y="29dp">

        </AbsoluteLayout>

        <TextView
            android:id="@+id/gamer2LoginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="249dp"
            android:layout_y="9dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/gamer1LoginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="61dp"
            android:layout_y="8dp"
            android:text="TextView" />

        <ScrollView
            android:id="@+id/inGameScroll"
            android:layout_width="354dp"
            android:layout_height="186dp"
            android:layout_x="5dp"
            android:layout_y="225dp">

            <EditText
                android:id="@+id/inGameChatObs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />
        </ScrollView>

    </AbsoluteLayout>
</android.support.constraint.ConstraintLayout>
